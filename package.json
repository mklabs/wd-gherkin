{
  "name": "gherkin-mocha",
  "version": "0.0.4",
  "description": "Basic cucumber impl. based on Mocha, Phantom and Webdriver",
  "main": "index.js",
  "bin": {
    "gherkin-mocha": "bin/gherkin-mocha",
    "gherkin-mocha-phantom": "bin/gherkin-mocha-phantom"
  },
  "scripts": {
    "test": "node bin/gherkin-mocha --stepdir test/node-steps test/features/browse.feature",
    "posttest": "phantomjs bin/gherkin-mocha-phantom --stepdir test/phantom-steps test/features/browse.feature"
  },
  "license": "ISC",
  "devDependencies": {
    "phantomjs": "^1.9.7-4"
  },
  "dependencies": {
    "gherkin": "^2.12.2",
    "nopt": "^2.2.0",
    "mocha": "^1.18.2",
    "wd": "^0.2.19",
    "debug": "^0.8.1"
  }
}
